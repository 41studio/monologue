<% if @posts.total_pages > 1 && @posts.total_pages != @page.to_i %>
  <%= link_to t("monologue.posts.older_posts"), posts_page_path(@page.to_i+1) %>
<% end %>

<% if @posts.total_pages > 1 && @page.to_i > 1 %>
  <%= link_to t("monologue.posts.newer_posts"), posts_page_path(@page.to_i-1) %>
<% end %>