<div class="monologue-social-sharing">
  <div class="monologue-facebook-sharing">
		<!-- FACEBOOK LIKE -->
    <div id="fb-root"></div>
    <script>(function(d){
      var js, id = 'facebook-jssdk'; if (d.getElementById(id)) {return;}
      js = d.createElement('script'); js.id = id; js.async = true;
      js.src = "//connect.facebook.net/<%= Monologue.facebook_like_locale || "en_US" %>/all.js#appId=288133081204194&xfbml=1";
      d.getElementsByTagName('head')[0].appendChild(js);
    }(document));</script>
    <div class="fb-like" data-send="false" data-layout="button_count" data-width="100" data-show-faces="false" data-font="verdana"></div>
    <!-- /FACEBOOK LIKE -->
  </div>
  <div class="monologue-twitter-sharing">
    <!-- TWITTER -->
    <script src="http://platform.twitter.com/widgets.js" type="text/javascript"></script>
    <a href="http://twitter.com/share?url=http://<%= request.fullpath %>&lang=<%= Monologue.twitter_locale || "en" %>&via=<%=Monologue.twitter_username%>&text=<%=@revision.title%>" class="twitter-share-button">Tweet</a>
    <!-- /TWITTER -->
  </div>
  <div class="monologue-google-plus-sharing">
		<!-- GOOGLE +1 -->
			<script type="text/javascript">
			  window.___gcfg = {lang: 'fr'};

			  (function() {
			    var po = document.createElement('script'); po.type = 'text/javascript'; po.async = true;
			    po.src = 'https://apis.google.com/js/plusone.js';
			    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(po, s);
			  })();
			</script>
			<g:plusone size="medium" annotation="none" href="<%= request.fullpath %>"></g:plusone>
		<!-- /GOOGLE +1 -->
	</div>
</div>
