<%= post.error_messages %>
<%= post.fields_for @revision do |revision| %>
  <%= revision.text_field :title, class: "span6" %>
  <%= revision.text_area :content, class: "span12" %>
  <%= revision.text_field :url %>
  <%= revision.text_field :published_at %>
<% end %>
<%= post.check_box :published, label: "Published" %>

<%= post.submit "Save", class: "btn btn-large btn-primary" %>