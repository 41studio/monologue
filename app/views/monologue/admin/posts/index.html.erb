<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post|%>
      <tr>
        <td><%= link_to post.posts_revisions.first.title, edit_admin_post_path(post) %></td>
        <td><%= link_to "Edit", edit_admin_post_path(post), class: "btn btn-small" %></td>
        <td><%= link_to "Delete", "#", class: "btn btn-small btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
